  <!-- Botão flutuante de acessibilidade -->
  <div class="acessibilidade-container">
    <button class="botao-principal">♿</button>
    <div class="menu-acessibilidade">
      <button onclick="toggleContraste()">Alto Contraste</button>
      <button onclick="toggleDarkMode()">Modo Escuro</button>
      <button onclick="aumentarFonte()">Aumentar Fonte</button>
      <button onclick="diminuirFonte()">Diminuir Fonte</button>
      <button onclick="resetarAcessibilidade()">Resetar</button>
    </div>
  </div>

  <script>
    let tamanhoFonte = 16; // valor inicial da fonte em px

    function toggleContraste() {
      document.body.classList.toggle("alto-contraste");
    }
    function toggleDarkMode() {
      document.body.classList.toggle("modo-escuro");
    }
    function aumentarFonte() {
      tamanhoFonte += 2;
      document.body.style.fontSize = tamanhoFonte + "px";
    }
    function diminuirFonte() {
      if (tamanhoFonte > 12) {
        tamanhoFonte -= 2;
        document.body.style.fontSize = tamanhoFonte + "px";
      }
    }
    function resetarAcessibilidade() {
      document.body.classList.remove("alto-contraste", "modo-escuro");
      tamanhoFonte = 16;
      document.body.style.fontSize = tamanhoFonte + "px";
    }
  </script>
